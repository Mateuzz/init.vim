{
    "inlayHint.enable": false,

    "clangd.path": "/usr/bin/clangd",
    "clangd.fallbackFlags": ["-std=c++23"],
    "html.autoClosingTags": true,
    "html.autoCreateQuotes": false,

    "suggest.completionItemKindLabels": {
        "variable": "\uf0ad",
        "constant": "\ueb51",
        "field": "\uf171",
        "property": "\uf171",
        "class": "\uf0c7",
        "struct": "\ue7a1",
        "function": "\ue79b",
        "method": "\uea8c",
        "text": "\ue612",
        "enum": "\uf435",
        "enumMember": "\uf02b"
    },
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "javascript.format.semicolons": "ignore",

    "java.project.sourcePaths": ["src/main/java"],
    "java.jdt.ls.java.home": "/usr/lib/jvm/java-21-openjdk",

    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "prettier.semi": false,

    "prettier.enable": false,

    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "typescript.format.semicolons": "ignore",
    "typescript.preferences.quoteStyle": "double",

    "intelephense.format.braces": "psr12",
    "intelephense.rename.namespaceMode": "all",
    
    "coc-class-css.languages": [
        "html",
        "blade",
        "js",
        "javascript",
        "php",
        "vue",
        "javascriptreact"
    ],
    "html.format.wrapLineLength": 300,

	"intelephense.environment.phpVersion": "8.4.13",

    "intelephense.files.associations": [
        "*.php",
        "*.phtml",
        "*.blade.php"
    ],

    "snippets.ultisnips.pythonPrompt": false
}
